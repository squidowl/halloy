root = true

# default settings or all
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = unset
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true


[*.md]
# double whitespace at end of line
# denotes a line break in Markdown
trim_trailing_whitespace = false
